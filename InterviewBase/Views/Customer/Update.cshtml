@model InterviewBase.Models.Entities.Customer
@{
    ViewBag.Title = "Редактирование";
}

<h2>@Model.FirstName @Model.LastName</h2>

@for (int i = 0; i < ViewBag.Errors.Count - 1; i++)
{
    <div class="alert alert-danger" role="alert" style="margin-top:20px;">@ViewBag.Errors[i]</div>
}

<form class="navbar-form navbar-left" role="search" style="width:100%;" method="post" action="/Customer/Update">
    <div class="form-group" style="display:flex;flex-flow:column nowrap;">
        <input type="text" class="form-control" placeholder="Имя" value="@Model.FirstName" style="margin:10px 0;" name="FirstName">
        <input type="text" class="form-control" placeholder="Фамилия" value="@Model.LastName" style="margin:10px 0;" name="LastName">
        <input type="text" class="form-control" placeholder="Электронная почта" value="@Model.Email" style="margin:10px 0;" name="Email">
        <input type="hidden" value="@Model.Id" name="Id" />
    </div>
    <button type="submit" class="btn btn-default" style="margin:10px 0;">Применить</button>
</form>

