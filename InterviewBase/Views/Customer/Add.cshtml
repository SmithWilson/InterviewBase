@model string
@{
    ViewBag.Title = "Добавление";
}

@if (!string.IsNullOrWhiteSpace(Model))
{
    var errors = Model.Split('.');
    foreach (var error in errors)
    {
        <div class="alert alert-danger" role="alert">error</div>
    }
}

<form class="navbar-form navbar-left" role="search" method="post" action="/Customer/Add" style="width:100%;margin:20px 0;">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Имя" name="FirstName">
        <input type="text" class="form-control" placeholder="Фамилия" name="LastName">
        <input type="text" class="form-control" placeholder="Email" name="Email">
    </div>
    <button type="submit" class="btn btn-default">Добавить</button>
</form>