@model List<string>
@{
    ViewBag.Title = "Добавление";
}

@for (int i = 0; i < Model.Count - 1; i++)
{
    <div class="alert alert-danger" role="alert" style="margin-top:20px;">@Model[i]</div>
}

<form class="navbar-form navbar-left" role="search" method="post" action="/ProductType/Add" style="width:100%;margin:20px 0;">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Название" name="Name">
    </div>
    <button type="submit" class="btn btn-default">Добавить</button>
</form>