@model List<string>
@{
    ViewBag.Title = "Добавление";
}

@for (int i = 0; i < Model.Count - 1; i++)
{
    <div class="alert alert-danger" role="alert" style="margin-top:20px;" id="addProduct">@Model[i]</div>
}

    <form class="navbar-form navbar-left" role="search" method="post" action="/Product/Add" style="width:100%;margin:20px 0;display:flex;flex-flow:column nowrap;">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Название" name="Name">
            <input type="text" class="form-control" placeholder="Цена" name="Price">
        </div>
        <div class="form-group" style="margin:20px 0;">
            <label for="sel1">Тип товара:</label>
            <select class="form-control" name="TypeId">
                @foreach (var type in ViewBag.Types)
                {
                    <option value="@type.Id">@type.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-default" style="max-width:35%;">Добавить</button>
    </form>