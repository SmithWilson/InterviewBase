@model InterviewBase.Models.Entities.Product
@{
    ViewBag.Title = "Редактирование";
}

@for (int i = 0; i < ViewBag.Errors.Count - 1; i++)
{
    <div class="alert alert-danger" role="alert" style="margin-top:20px;">@ViewBag.Errors[i]</div>
}

    <form class="navbar-form navbar-left" role="search" style="width:100%;" method="post" action="/Product/Update">
        <div class="form-group" style="display:flex;flex-flow:column nowrap;">
            <input type="text" class="form-control" placeholder="Имя" value="@Model.Name" style="margin:10px 0;" name="Name">
            <input type="text" class="form-control" placeholder="Фамилия" value="@Model.Price" style="margin:10px 0;" name="Price">
            <input type="hidden" value="@Model.Id" name="Id" />
        </div>
        <div class="form-group" style="margin:20px 0;">
            <label for="sel1">Тип товара:</label>
            <select class="form-control" name="TypeId">
                @foreach (var type in ViewBag.Types)
                {
                    if (type.Id != Model.TypeId)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                    else
                    {
                        <option selected value="@type.Id">@type.Name</option>
                    }
                }
            </select>
        </div>
        <button type="submit" class="btn btn-default" style="margin:10px 0;">Применить</button>
    </form>

