@model List<string>
@{
    ViewBag.Title = "Добавление";
}

@for (int i = 0; i < Model.Count - 1; i++)
{
    <div class="alert alert-danger" role="alert" style="margin-top:20px;">@Model[i]</div>
}

    <form class="navbar-form navbar-left" role="search" method="post" action="/Order/Add" style="width:100%;margin:20px 0;display:flex;flex-flow:column nowrap;">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Количество" name="Count">
        </div>

        <div class="form-group" style="margin:20px 0;">
            <label for="sel1">Клиент:</label>
            <select class="form-control" name="CustomerId" style="width:200px;">
                @foreach (var customer in ViewBag.Customers)
                {
                    <option value="@customer.Id">@customer.LastName @customer.FirstName</option>
                }
            </select>
        </div>

        <div class="form-group" style="margin:20px 0;">
            <label for="sel1">Товар:</label>
            <select class="form-control" name="ProductId" style="width:200px;">
                @foreach (var product in ViewBag.Products)
                {
                    <option value="@product.Id">@product.Name</option>
                }
            </select>
        </div>

        <div class="form-group" style="margin:20px 0;">
            <label for="sel1">Сотрудник:</label>
            <select class="form-control" name="EmployeeId" style="width:200px;">
                @foreach (var employee in ViewBag.Employees)
                {
                <option value="@employee.Id">@employee.LastName @employee.FirstName</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-default">Добавить</button>
    </form>